# WPS
location /wps/output {
       autoindex on;
       alias /var/www/wps/output;
}

location /services/wps {
        proxy_set_header Host $host;
        proxy_redirect   off;
        proxy_set_header X-NginX-Proxy true;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_pass http://127.0.0.1:8081;
}

# WMS
location /services/wms {
    fastcgi_pass                     unix:/var/run/fcgiwrap.socket;
    fastcgi_param SCRIPT_FILENAME    /usr/lib/cgi-bin/mapserv;
    fastcgi_param MS_MAPFILE         /opt/mapserv/wms/subdayprecip.map;
    fastcgi_param MS_ERRORFILE       /var/log/mapserv/mapserv.log;
    fastcgi_param REQUEST_METHOD     $request_method;
    fastcgi_param QUERY_STRING       $query_string;
}

# WFS
location /services/wfs {
    fastcgi_pass                     unix:/var/run/fcgiwrap.socket;
    fastcgi_param SCRIPT_FILENAME    /usr/lib/cgi-bin/mapserv;
    fastcgi_param MS_MAPFILE         /opt/mapserv/wfs/subdayprecip.map;
    fastcgi_param MS_ERRORFILE       /var/log/mapserv/mapserv.log;
    fastcgi_param REQUEST_METHOD     $request_method;
    fastcgi_param QUERY_STRING       $query_string;
}
